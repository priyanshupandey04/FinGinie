datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  phone     String?
  image     String?
  createdAt DateTime @default(now())

  plans Plan[]
}

model Plan {
  id        Int      @id @default(autoincrement())
  label     String?
  createdAt DateTime @default(now())

  startDate         DateTime
  endDate           DateTime
  lastPlanVersionId Int?

  userId Int  
  user   User @relation(fields: [userId], references: [id])

  versions PlanVersion[]
}

model PlanVersion {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  monthlyInvestment Int
  riskScore         Int

  startDate DateTime
  endDate   DateTime

  age    Int?
  income Int?
  notes  String?

  planId Int  
  plan   Plan @relation(fields: [planId], references: [id])
}
